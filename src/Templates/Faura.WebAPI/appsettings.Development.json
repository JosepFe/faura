{
    "Logging": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "System": "Error"
            }
        },
        "ApplicationName": "FauraApp",
        "Outputs": {
            "Console": {
                "Enable": true,
                "LogTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} | CorrelationId: {CorrelationId} | ApplicationName: {ApplicationName}{NewLine}{Exception}"
            },
            "Graylog": {
                "Enable": false
            },
            "Seq": {
                "Enable": false
            },
            "File": {
                "Enable": false,
                "EnableDate": false
            },
            "SqLiteDb": {
                "Enable": false
            },
            "ElasticSearch": {
                "Enable": false
            }
        }
    },

    "Swagger": {
        "Authentication": {
            "OAuth2": {
                "Enable": true,
                "Name": "OAuth2",
                "AuthenticationURL": "{AuthenticationURL-PlaceHolder}",
                "Scopes": {
                    "openid": "openid",
                    "profile": "profile"
                }
            },
            "Bearer": {
                "Enable": true,
                "Name": "Bearer"
            },
            "BasicAuth": {
                "Enable": false,
                "Name": "Basic"
            },
            "ApiKey": {
                "Enable": false,
                "Name": "X-API-Key",
                "In": "Header" // "Header" o "Query"
            }
        }
    },


    "JWT": {
        "MetadataAddress": "{MetadataAddress-PlaceHolder}",
        "ValidIssuer": "{ValidIssuer-PlaceHolder}",
        "Audience": "account"
    },

    "ConnectionStrings": {
        "Employee": "{connectionString_placeholder}"
    }
}
